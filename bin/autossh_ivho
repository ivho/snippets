#!/bin/sh
set -x
DIR=$HOME/.autossh
PIDFILE=$DIR/autossh.pid

mkdir -p $DIR

if [ -f $PIDFILE ] ; then
	if [ -d /proc/$(cat $PIDFILE) ] ; then
		exit 0
	fi
fi

date >> $DIR/autossh.log
AUTOSSH_PIDFILE=$PIDFILE autossh svetsen -R 8888:localhost:8888 -R 11022:localhost:22 -f -N >> $DIR/autossh.log
echo "Done" >> $DIR/autossh.log

